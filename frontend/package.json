{
  "name": "budgeting-app",
  "version": "0.1.0",
  "description": "Desktop budgeting application with Python backend and React frontend",
  "main": "src/main/main.js",
  "homepage": "./",
  "author": {
    "name": "BudgetingApp Team",
    "email": "budgetingapp@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/SamarthK1239/BudgetingApp.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "build-backend": "cd ../backend && python build_backend.py",
    "electron-build": "npm run build && electron-builder",
    "electron-build-win": "npm run build && electron-builder --win",
    "electron-build-mac": "npm run build && electron-builder --mac",
    "electron-build-linux": "npm run build && electron-builder --linux",
    "dist": "npm run build-backend && npm run electron-build",
    "dist-win": "npm run build-backend && npm run electron-build-win",
    "dist-mac": "npm run build-backend && npm run electron-build-mac",
    "dist-linux": "npm run build-backend && npm run electron-build-linux"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@reduxjs/toolkit": "^2.0.1",
    "@tanstack/react-query": "^5.17.9",
    "antd": "^5.12.8",
    "axios": "^1.6.5",
    "d3-sankey": "^0.12.3",
    "date-fns": "^3.0.6",
    "dayjs": "^1.11.19",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.21.1",
    "recharts": "^2.10.4"
  },
  "devDependencies": {
    "@types/d3-sankey": "^0.12.5",
    "@types/node": "^20.10.7",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/react-redux": "^7.1.33",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "react-scripts": "5.0.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.budgetingapp.app",
    "productName": "BudgetingApp",
    "extends": null,
    "publish": null,
    "files": [
      "build/**/*",
      "src/main/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.finance"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Office;Finance"
    },
    "extraResources": [
      {
        "from": "../backend/dist/",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  }
}
